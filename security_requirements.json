{
  "project": "PDF Converter",
  "version": "1.0.0",
  "last_updated": "2025-01-20",
  "security_requirements": {
    "1_network_communication_security": {
      "1.1_https_requirement": {
        "description": "Tüm trafik HTTPS (TLS 1.2+ veya 1.3) üzerinden geçecek",
        "status": "backend_required",
        "implementation": {
          "tls_version": "TLS 1.2+ veya 1.3",
          "hsts_header": "Strict-Transport-Security: max-age=31536000; includeSubDomains",
          "http_redirect": "HTTP → HTTPS otomatik yönlendirme",
          "certificate_management": "Let's Encrypt / Cloudflare / AWS ACM ile otomatik yenileme"
        },
        "priority": "critical"
      },
      "1.2_tls_certificate": {
        "description": "Güçlü cipher suite kullanımı",
        "status": "backend_required",
        "priority": "critical"
      }
    },
    "2_file_upload_security": {
      "2.1_file_type_validation": {
        "description": "Dosya tipi doğrulama",
        "status": "partial",
        "frontend_implemented": true,
        "backend_required": [
          "Content-Type kontrolü",
          "Magic bytes (signature) ile gerçek format doğrulama",
          "Sadece izin verilen uzantılar: .pdf, .docx, .jpg, vb."
        ],
        "allowed_extensions": [".pdf", ".doc", ".docx", ".ppt", ".pptx", ".xls", ".xlsx", ".jpg", ".jpeg", ".png", ".html", ".htm"],
        "priority": "critical"
      },
      "2.2_file_size_limits": {
        "description": "Dosya boyutu & limitler",
        "status": "partial",
        "frontend_implemented": true,
        "limits": {
          "max_file_size": "100 MB",
          "max_total_size": "500 MB",
          "concurrent_upload_limit": "backend_required",
          "upload_rate_limit": "backend_required"
        },
        "priority": "high"
      },
      "2.3_sandbox_processing": {
        "description": "Sandbox ortamında işleme",
        "status": "backend_required",
        "requirements": [
          "PDF işleme için ayrı container / process",
          "Container root olmadan çalışacak",
          "Container'ın internete erişimi kapalı",
          "CPU / RAM / runtime limit (resource abuse engelleme)"
        ],
        "priority": "critical"
      },
      "2.4_malware_scanning": {
        "description": "Malware / Exploit taraması",
        "status": "backend_required",
        "tools": ["ClamAV veya benzeri AV"],
        "action": "Zararlı bulunan dosyaları blokla ve logla",
        "priority": "high"
      }
    },
    "3_file_storage_deletion": {
      "3.1_temporary_storage": {
        "description": "Geçici saklama",
        "status": "backend_required",
        "requirements": [
          "Yüklenen dosyalar geçici storage (örn. S3 bucket / tmp dizini)",
          "Dosya ve çıktı linki sadece token ile erişilebilir"
        ],
        "priority": "high"
      },
      "3.2_auto_deletion": {
        "description": "Otomatik silme",
        "status": "backend_required",
        "requirements": [
          "İşlemden X dakika/saat sonra dosyayı otomatik sil (örn. 10-60 dk)",
          "Storage lifecycle rule veya background job (cron) ile temizleme",
          "Kullanıcı manuel 'Delete now' tetikleyebilsin (isteğe bağlı)"
        ],
        "priority": "high"
      },
      "3.3_encryption": {
        "description": "Şifreleme",
        "status": "backend_required",
        "requirements": [
          "At-rest encryption (örn. S3 server-side encryption, AES-256)",
          "Dosya isimlerinde kişisel bilgi tutulmaması (random UUID ile adlandırma)"
        ],
        "priority": "high"
      }
    },
    "4_web_application_security": {
      "4.1_owasp_top10": {
        "description": "OWASP Top 10 Önlemleri",
        "status": "partial",
        "frontend_implemented": [
          "CSP (Content Security Policy)",
          "X-Content-Type-Options",
          "X-Frame-Options",
          "Output encoding hazırlığı"
        ],
        "backend_required": [
          "SQL / NoSQL injection'a karşı prepared statement",
          "XSS'e karşı output encoding ve CSP",
          "CSRF koruması (CSRF token + SameSite cookie)",
          "Yetkilendirme & erişim kontrolü (token bazlı erişim)",
          "SSRF / RCE riskini azaltmak için arka plandaki converter servislerini izole etme"
        ],
        "priority": "critical"
      },
      "4.2_rate_limiting_ddos": {
        "description": "Rate Limiting & DDoS Koruması",
        "status": "backend_required",
        "requirements": [
          "IP bazlı rate limiting (upload denemeleri, API çağrıları)",
          "Cloudflare / benzeri reverse proxy üzerinden temel DDoS koruması",
          "Bot / abuse tespiti için reCAPTCHA (özellikle anonim kullanımda)"
        ],
        "priority": "high"
      },
      "4.3_security_headers": {
        "description": "Güvenli Header'lar",
        "status": "implemented",
        "headers": {
          "X-Frame-Options": "DENY",
          "X-Content-Type-Options": "nosniff",
          "Referrer-Policy": "strict-origin-when-cross-origin",
          "Strict-Transport-Security": "backend_required",
          "Content-Security-Policy": "implemented"
        },
        "priority": "high"
      }
    },
    "5_logging_monitoring": {
      "5.1_log_content": {
        "description": "Log İçeriği",
        "status": "backend_required",
        "requirements": [
          "Loglarda dosya içeriği veya PII tutma",
          "Sadece teknik hata, IP, timestamp, işlem durumu loglansın",
          "Dosya isimlerini anonimleştir (hash/ID)"
        ],
        "priority": "medium"
      },
      "5.2_monitoring": {
        "description": "Monitoring",
        "status": "backend_required",
        "requirements": [
          "Fail oranları, hata kodları, response time için monitoring (Prometheus / CloudWatch vb.)",
          "Şüpheli trafik / brute force / aşırı upload için alarmlar",
          "Security incident durumunda hızlı inceleme için temel audit log"
        ],
        "priority": "medium"
      }
    },
    "6_user_privacy_anonymity": {
      "6.1_anonymous_usage": {
        "description": "Anonim Kullanım",
        "status": "implemented",
        "requirements": [
          "Hesap oluşturmadan da converter kullanabilme",
          "IP dışında kullanıcı tanımlayıcı veri zorunlu olmamalı"
        ],
        "priority": "medium"
      },
      "6.2_privacy_policy": {
        "description": "Gizlilik Politikası",
        "status": "backend_required",
        "requirements": [
          "Dosyaların ne kadar süre saklandığı açıkça yazılacak",
          "Dosyaların model eğitimi için kullanılmadığı belirtilecek",
          "Üçüncü taraflarla (reklamcı, veri broker) paylaşılmadığı belirtilecek"
        ],
        "priority": "medium"
      }
    },
    "7_server_infrastructure": {
      "7.1_separate_services": {
        "description": "Ayrık Servisler",
        "status": "backend_required",
        "requirements": [
          "Web API, dosya işleme servisi ve storage birbirinden ayrı servisler",
          "IAM / role-based access: her servise minimum gerekli yetki"
        ],
        "priority": "high"
      },
      "7.2_updates": {
        "description": "Güncellemeler",
        "status": "backend_required",
        "requirements": [
          "PDF işleme araçları (Ghostscript, LibreOffice, ImageMagick vb.) düzenli güncellenecek",
          "Güvenlik patch'leri için otomatik veya düzenli update süreci"
        ],
        "priority": "high"
      },
      "7.3_backup_recovery": {
        "description": "Backup & Disaster Recovery",
        "status": "backend_required",
        "requirements": [
          "Uygulama config ve kritik metadata için yedekleme",
          "Kullanıcı dosyaları kısa süreli olduğu için full backup gerekmiyor; ama storage bozulmasına karşı plan"
        ],
        "priority": "medium"
      }
    },
    "8_advertising_third_party": {
      "8.1_ad_provider": {
        "description": "Reklam Sağlayıcı",
        "status": "backend_required",
        "requirements": [
          "Güvenilir provider (örn. Google AdSense) kullanımı",
          "Pop-up / shady reklam network'lerinden kaçınma (malvertising riski)"
        ],
        "priority": "low"
      },
      "8.2_csp_script_restriction": {
        "description": "CSP ile Script Kısıtlama",
        "status": "implemented",
        "requirements": [
          "Sadece belirli domainlerden script çalışmasına izin veren CSP",
          "3rd party scriptleri minimumda tutma"
        ],
        "priority": "medium"
      }
    }
  },
  "implementation_status": {
    "frontend_complete": [
      "CSP headers",
      "Security headers (X-Frame-Options, X-Content-Type-Options, etc.)",
      "Client-side file type validation",
      "Client-side file size validation",
      "Filename sanitization"
    ],
    "backend_required": [
      "HTTPS/TLS configuration",
      "Server-side file validation (magic bytes)",
      "Sandbox environment",
      "Malware scanning",
      "Rate limiting",
      "DDoS protection",
      "Secure file storage",
      "Auto-deletion",
      "Encryption at rest",
      "OWASP Top 10 backend measures",
      "Logging and monitoring",
      "Infrastructure security"
    ]
  },
  "priority_levels": {
    "critical": "Hemen uygulanmalı - Güvenlik açığı riski yüksek",
    "high": "Yakın zamanda uygulanmalı - Önemli güvenlik önlemi",
    "medium": "Planlanmalı - İyi güvenlik pratiği",
    "low": "İsteğe bağlı - Ek güvenlik katmanı"
  }
}

